
pipeline {
    agent {
        docker {
            image 'maven:3.9.9-eclipse-temurin-21'  // Maven + JDK21 preinstalled
            args '-v /root/.m2:/root/.m2'          // (optional) cache Maven repo
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/seshuadi969/retail-banking.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests -Dmaven.clean.failOnError=false'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                sh '''
                   pkill -f "java -jar" || true
                   nohup java -jar target/*.jar > app.log 2>&1 &
                '''
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully ✅"
        }
        failure {
            echo "Pipeline failed ❌"
        }
    }
}
